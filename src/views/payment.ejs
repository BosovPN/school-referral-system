<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Page</title>
    <script src="https://js.stripe.com/v3/"></script>
</head>
<body>
    <h1>Payment Page</h1>
    
    <form id="payment-form">
        <input type="hidden" id="userId" value="<%= userId %>">
        <label for="amount">Amount (RUB):</label>
        <input type="number" id="amount" required>
        <button type="submit" id="submit-button">Pay</button>
    </form>

    <div id="payment-message"></div>

    <script>
        const stripe = Stripe('<%= stripePublicKey %>'); // Ваш публичный ключ Stripe

        const form = document.getElementById('payment-form');

        form.addEventListener('submit', async (event) => {
            event.preventDefault();

            const amount = document.getElementById('amount').value;
            const userId = document.getElementById('userId').value;

            // Отправка данных на сервер для создания платежа
            const response = await fetch('/api/payment', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ amount, userId }),
            });

            const data = await response.json();

            if (!response.ok) {
                document.getElementById('payment-message').innerText = 'Ошибка при создании платежа';
                return;
            }

            // Подтверждение платежа с помощью Stripe
            const { clientSecret } = data;
            const { error } = await stripe.confirmCardPayment(clientSecret, {
                payment_method: {
                    card: {
                        // Захватываем данные карты из элемента Stripe
                    },
                },
            });

            if (error) {
                document.getElementById('payment-message').innerText = 'Ошибка подтверждения платежа: ' + error.message;
            } else {
                document.getElementById('payment-message').innerText = 'Платёж успешно завершён!';
            }
        });
    </script>
</body>
</html>
